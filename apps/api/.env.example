# Exemplo de variáveis de ambiente para o serviço API
# Copie este arquivo para .env e preencha os valores conforme necessário

# Porta padrão do servidor
PORT=4000


# Configuração do PostgreSQL
# Exemplo de uso: preencha as variáveis abaixo ou use DATABASE_URL diretamente
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=senha
POSTGRES_DB=meubanco

POSTGRES_SSL=false

# Controla se o TypeORM deve sincronizar o schema automaticamente (NÃO use true em produção)
TYPEORM_SYNCHRONIZE=false

# String de conexão completa (opcional, sobrescreve as variáveis acima)
DATABASE_URL=

# Chave secreta para JWT
JWT_SECRET=

# Outras variáveis customizadas
# API_KEY=
